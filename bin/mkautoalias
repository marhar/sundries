#!/bin/sh

if test $1. = .; then
    d=`pwd`
else
    d=$1
fi

cd $DD

rm -f $HOME/.autoalias
(
echo \# generated by mkautoalias
echo \# `date`
echo
for f in `find . -name AUTOALIAS 2>/dev/null|sed 's/^..//'|sort`; do

    for z in `cat $f`; do
        echo alias $b=$z
    done
done
) |tee  $HOME/.autoalias
